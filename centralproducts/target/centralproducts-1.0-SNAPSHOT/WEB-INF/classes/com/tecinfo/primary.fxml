<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tecinfo.Controller.PrimaryController"
      spacing="10" alignment="CENTER"
      prefWidth="500" prefHeight="400"
      style="-fx-padding: 20;">

    <!-- Título -->
    <Label text="Cadastro de Produtos" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Campos de entrada -->
    <TextField fx:id="nameField" promptText="Nome do produto" />
    <TextField fx:id="quantityField" promptText="Quantidade" />
    <TextField fx:id="valueField" promptText="Valor" />

    <!-- Botão com onAction ligado ao controller -->
    <Button text="Salvar Produto" onAction="#handleSaveProduct" />

    <!-- Lista de produtos -->
    <Label text="Produtos cadastrados:" style="-fx-font-weight: bold;" />
    <TextArea fx:id="productListArea" editable="false" prefHeight="200" prefWidth="400" />

</VBox>
